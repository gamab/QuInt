<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>controleur.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignInStudent</servlet-name>
        <servlet-class>quint.servlet.SignInStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>afficher</servlet-name>
        <servlet-class>controleur.afficher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficherOffres</servlet-name>
        <servlet-class>Controller.Company.AfficherOffres</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjouterOffre</servlet-name>
        <servlet-class>Controller.Company.AjouterOffre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WSApplicationDb</servlet-name>
        <servlet-class>databaseApplication.WSApplicationDb</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AfficherOffres</servlet-name>
        <url-pattern>/AfficherOffres.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignInStudent</servlet-name>
        <url-pattern>/SignInStudent.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjouterOffre</servlet-name>
        <url-pattern>/AjouterOffre.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login_servlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>afficher</servlet-name>
        <url-pattern>/afficher.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WSApplicationDb</servlet-name>
        <url-pattern>/WSApplicationDb.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
